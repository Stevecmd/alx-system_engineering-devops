#!/usr/bin/env bash

# Check if the number of arguments is less than 4
if [ "$#" -lt 4 ]; then
    echo "Usage: $0 PATH_TO_FILE SERVER_IP USERNAME SSH_KEY_PATH"
    exit 1
fi

# Assign arguments to variables
file="$1"
server="$2"
user="$3"
key="$4"

# Check if the SSH key file exists and is readable
if [ ! -f "$key" ] || [ ! -r "$key" ]; then
    echo "Error: SSH key file '$key' does not exist or is not readable."
    exit 2
fi

# Transfer the file
if scp -i "$key" -o StrictHostKeyChecking=no "$file" "${user}@${server}:~/"; then
    echo "File '$file' successfully transferred to ${user}@${server}."
else
    echo "Error: Failed to transfer file."
    exit 3
fi
