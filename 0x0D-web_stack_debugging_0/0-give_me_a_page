#!/usr/bin/env bash
# Start Apache in a Docker container.

# CONTAINER_ID=$1

# if [ -z "$CONTAINER_ID" ]; then
#     echo "Usage: $0 <container_id_or_name>"
#     exit 1
# fi

# # Attempt to start Apache using the service command.
# sudo docker exec "$CONTAINER_ID" service apache2 start

# Update package list
apt-get update

# Install Apache2 if it's not already installed
apt-get install -y apache2

# Start Apache2
service apache2 start

# Correctly output the status of Apache2
if service apache2 status; then
    echo "apache2 is running"
else
    echo "apache2 is not running"
fi

# Keep the container running
tail -f /dev/null
