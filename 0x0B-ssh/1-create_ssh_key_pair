#!/bin/bash

# Check if the private key file already exists
if [ -f "school" ]; then
  echo "Error: The file 'school' already exists. Please remove it manually if you want to regenerate the key pair."
  exit 1
fi

echo "Generating an RSA key pair with a 4096-bit key length, named 'school', protected by a passphrase."

# Generate an RSA key pair with the specified requirements
ssh-keygen -b 4096 -f school -N betty

echo "RSA key pair generated successfully."
